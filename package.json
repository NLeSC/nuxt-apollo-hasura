{
  "name": "nuxt-apollo-hasura",
  "description": "Nuxt Apollo Hasura Postgres Template",
  "organization": "NLeSC eScienceCenter",
  "version": "1.1.0",
  "license": "MIT",
  "author": "Jesus Garcia Gonzalez",
  "private": true,
  "scripts": {
    "serve": "concurrently \"yarn dev\" \"yarn auth-server\" \"docker-compose up -d\" \"yarn docs\"",
    "auth-server": "nodemon ./auth-server",
    "docs": "cd docs && yarn dev",
    "dev": "nuxt dev --open",
    "build": "nuxt build",
    "migrate": "cd ../hasura && ../hasura migrate create hasurafiles",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "deploy": "yarn build:gh-pages && GIT_DEPLOY_REPO=https://github.com/NLeSC/nuxt-apollo-hasura scripts/deploy.sh",
    "analyze": "yarn nuxt build --analyze",
    "build:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt build",
    "generate": "nuxt generate",
    "generate:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate",
    "release": "standard-version",
    "start": "nuxt start"
  },
  "dependencies": {
    "@mdi/js": "^5.8.55",
    "@nuxtjs/apollo": "^4.0.1-rc.4",
    "@nuxtjs/auth": "^4.9.1",
    "@nuxtjs/axios": "^5.12.2",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/pwa": "^3.2.2",
    "axios": "^0.21.0",
    "cross-env": "^7.0.2",
    "jose": "^2.0.3",
    "lodash.debounce": "^4.0.8",
    "nuxt": "^2.14.7"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^3.1.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@babel/runtime-corejs3": "^7.12.5",
    "@nuxtjs/date-fns": "^1.4.1",
    "@nuxtjs/vuetify": "^1.11.2",
    "concurrently": "^5.3.0",
    "json-minify": "^1.0.0",
    "keypair": "^1.0.1",
    "nodemon": "^2.0.6",
    "standard-version": "^9.0.0"
  }
}
